{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,

        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,

        /* Aliases */
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    // Include *all* TS files in `src`
    "include": ["src/**/*.ts"]
}
